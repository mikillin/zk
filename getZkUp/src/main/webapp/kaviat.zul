<zk xmlns:w="http://www.zkoss.org/2005/zk/client">
    <window id="mainWindow" width="100%" height="100%">
        <?link rel="stylesheet" type="text/css" href="/css/charts/style.css"?>
        <?link rel="stylesheet" type="text/css" href="/css/charts/heat-map-style.css"?>

        <style>

            .heat-map-item {
            width: 50px;
            height: 50px;
            margin: 1px;
            border-radius: 2px;
            border-style: none;

            }

            .heat-map {
            border-style: solid;
            border-width: 1px;
            }

            .heat-map-row {
            display: flex;
            flex-direction: row;
            }

            .heat-map-items-area {
            display: flex;
            flex-direction: column;
            }

            .category-name {
            width: 100px;
            font-size:10px;
            }

            .heat-map-date {
            width: 50px;
            height: 50px;
            transform: rotate(-90deg) translate(-45px, 45px);
            transform-origin: left top 0;
            }

            .rotate {
            transform: rotate(-90deg) translate(-5px, -55px);
            transform-origin: right top;
            position: absolute;
            }

            .heat-map-row-common {
            display: flex;
            flex-direction: row;
            align-items: center;
            }
        </style>
        <style>
            /* Tooltip container */
            .tooltip {
            position: relative;
            display: inline-block;
            /* border-bottom: 1px dotted black;*/
            /* If you want dots under the hoverable text */
            }

            /* Tooltip text */
            .tooltip .tooltiptext {
            visibility: hidden;
            width: 120px;
            background-color: #555;
            color: #fff;
            text-align: center;
            padding: 5px 0;
            border-radius: 6px;

            /* Position the tooltip text */
            position: absolute;
            z-index: 999;
            bottom: 75%;
            left: 50%;
            margin-left: -60px;

            /* Fade in tooltip */
            opacity: 0;
            transition: opacity 0.3s;
            }

            /* Tooltip arrow */
            .tooltip .tooltiptext::after {
            content: "";
            position: absolute;
            top: 100%;
            left: 50%;
            margin-left: -5px;
            border-width: 5px;
            border-style: solid;
            border-color: #555 transparent transparent transparent;
            }

            /* Show the tooltip text when you mouse over the tooltip container */
            .tooltip:hover .tooltiptext {
            <!--            visibility: visible;-->
            visibility: hidden;
            opacity: 1;
            }
            div.row-with-images {
            align-items: center;
            }

            .bottom-tooltip {
            font-size: 11px;
            }


            .charts-kaviat-datebox .z-datebox-input, .charts-kaviat-search.z-textbox {
            font-size: 12px;
            }

            .charts-kaviat-compare-area-column {
            width: 300px;
            height: 280px;
            }

            .charts-kaviat-controls-area-column {
            width: 650px;
            padding-top:10px;
            display: flex;
            flex-direction: column;
            align-items: center;
            }

            .charts-kaviat-row {
            display: flex;
            flex-direction: row;
            align-items: flex-start;
            }
            .charts.kaviat {
            justify-content: end;
            padding-top: 0px;
            }

            div.charts-kaviat-row-with-icons {
            display: flex;
            align-items: center;
            justify-content: center;
            }

            .bottom-tooltip {
            margin-top: 10px;}

            .line {
            stroke: #000000;
            stroke-width: 0.5;
            }

            div.charts{
            height: 350px;
            }

            .control-elements {
            font-size: 10px;}
        </style>


        <div sclass="charts kaviat" id="lineChartId" viewModel="@id('vm') @init('fhdo.ChartKaviatVM')">
            <div sclass="charts-kaviat-controls-area-column">
                <div sclass="charts-row charts-kaviat-row-with-icons ">

                    <div sclass="charts-row row-with-images">
                        <label value="FragebÃ¶gen" sclass="control-elements"></label>
                        <listbox selectedItem="@bind(vm.surveyType)" mold="select"
                                 sclass="control-elements select"
                                 model="@bind(vm.surveys)"
                                 onSelect="@command('showKaviatChart')"
                        >
                            <template name="children">
                                <listitem value="${each}"/>
                            </template>
                        </listbox>


                        <listbox selectedItem="@bind(vm.surveyDate)" mold="select"
                                 sclass="control-elements select"
                                 model="@bind(vm.surveyDates)"
                                 onSelect="@command('showKaviatChart')"
                        >
                            <template name="children">
                                <listitem value="${each}"/>
                            </template>
                        </listbox>

                    </div>
                </div>

                <div zclass="charts-kaviat">

                </div>
            </div>
        </div>
    </window>
</zk>
